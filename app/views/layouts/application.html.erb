<!DOCTYPE html>
<html>
  <head>
    <title>ReservingApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <ul>
          <li><%= link_to "マイページ", user_path %></li>
          <li><%= link_to "予約表", reservations_path %></li>
          <li><%= link_to "バンド一覧", bands_path %></li>
          <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
        </ul>
      <% end %>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
      
    </footer>
  </body>
</html>
