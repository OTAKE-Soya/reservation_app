<div class="container">
  <div class="row">
    <h2>予約編集</h2>
  </div>
  <div class="row">
    <%= form_with model: @reservation, local: true do |f| %>
      <div class="form-group">
        <%= f.label "予約バンド名" %>
        <%= f.text_field :name, class: "form-control" %>      
      </div>
      <div class="form-group">
        <%= f.label "月日" %>
        <%= f.date_field :date, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "時間枠" %>
        <div>
          <%= f.radio_button :period, 0 %>1限　
          <%= f.radio_button :period, 1 %>2限　
          <%= f.radio_button :period, 2 %>昼　
          <%= f.radio_button :period, 3 %>3限　
          <%= f.radio_button :period, 4 %>4限　
          <%= f.radio_button :period, 5 %>5限
        </div>
      </div>
      <%= f.hidden_field :user_id, value: current_user %>
      <div class="form-group">
        <%= f.submit "予約変更", class: "form-control" %>
      </div>
    <% end %>
    
  </div>
  <div class="row">
    <%= link_to "削除", reservation_path(params[:id]), class: "btn btn-danger btn-sm", method: :delete %>
  </div>
</div>

